
@model WebApp_Assignment1.Models.UResponse; 

@*Comment this section because this can be handled by ViewStart.chtml file*@
@*@{
    Layout = "_Layout";
}*@

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ContactMe</title>
    <link rel="stylesheet" href="@Url.Content("~/css/Style.css")" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <form asp-action="EditContactInfo" method="post">
        <input type="hidden" asp-for="UResponsesID" />
        <div class="container">
            <div class="col">
                <br />
                <h1 style="font-weight: bold;">Edit Contact Details</h1>
                <hr />
                <div style="color:red;" asp-validation-summary="All"></div>
                <div class="row" id="row-flex">
                    <div class="col">
                        <label id="labelStyle" asp-for="Name">Name</label>
                        <input type="text" id="name" asp-for="Name" placeholder="Your name.." >

                        <label id="labelStyle" asp-for="EmailID">Email-ID</label>
                        <input type="text" id="email" asp-for="EmailID" placeholder="Your Email-ID..">

                        <label id="labelStyle" asp-for="PhoneNumber">Mobile No.</label>
                        <input type="text" id="mobileNo" asp-for="PhoneNumber" placeholder="Your Mobile Number..">

                        <label id="labelStyle" asp-for="Message">Message</label>
                        <textarea id="subject" asp-for="Message" placeholder="Your Message.." style="height:100px"></textarea>

                        <button class="button" type="submit"> SUBMIT </button>
                    </div>
                </div>
            </div>

    </form>
    
</body>
</html>