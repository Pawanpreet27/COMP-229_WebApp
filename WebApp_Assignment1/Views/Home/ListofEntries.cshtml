
@{
    Layout = null;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Entries</title>
    <link rel="stylesheet" href="@Url.Content("~/css/Style.css")" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="container">
        <br />
        <h1 style="font-weight: bold;">List of all people who contacted us</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Message</th>
                </tr>
                <hr />
            </thead>

            <tbody>
                @foreach (WebApp_Assignment1.Models.UResponse r in Model)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.EmailID</td>
                        <td>@r.PhoneNumber</td>
                        <td>@r.Message</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</body>
</html>